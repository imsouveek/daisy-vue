{
    "name": "daisy-vue",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "engines": {
        "node": "^20.19.0 || >=22.12.0"
    },
    "files": [
        "dist",
        "src"
    ],
    "main": "./dist/lib.umd.cjs",
    "module": "./dist/lib.js",
    "types": "./dist/types/main.d.ts",
    "exports": {
        ".": {
            "import": "./src/components/components.ts",
            "require": "./src/components/components.ts"
        },
        "./style.css": {
            "import": "./dist/style.css",
            "require": "./dist/style.css"
        },
        "./js": {
            "types": "./dist/types/main.d.ts",
            "import": "./dist/lib.js",
            "require": "./dist/lib.umd.cjs"
        },
        "./config": {
            "types": "./src/global-config.ts",
            "import": "./src/global-config.ts",
            "require": "./src/global-config.ts"
        },
        "./globals": {
            "types": "./src/globals/index.ts",
            "import": "./src/globals/index.ts",
            "require": "./src/globals/index.ts"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "run-p type-check \"build-only {@}\" --",
        "preview": "vite preview",
        "test:unit": "vitest",
        "build-only": "vite build",
        "type-check": "vue-tsc --project ./tsconfig.app.json && node ./scripts/rename-types-dir.mjs",
        "lint": "eslint . --fix",
        "story:dev": "storybook dev --host 0.0.0.0 --port 6006",
        "story:build": "storybook build"
    },
    "peerDependencies": {
        "vue": "^3.5.18"
    },
    "dependencies": {
        "@iconify/vue": "^5.0.0",
        "@tailwindcss/vite": "^4.1.12",
        "daisyui": "^5.0.54",
        "defu": "^6.1.4",
        "nanoid": "^5.1.5",
        "tailwindcss": "^4.1.12"
    },
    "devDependencies": {
        "@faker-js/faker": "^10.0.0",
        "@storybook/addon-docs": "^9.1.3",
        "@storybook/vue3-vite": "^9.1.3",
        "@tsconfig/node22": "^22.0.2",
        "@types/jsdom": "^21.1.7",
        "@types/node": "^22.16.5",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitest/eslint-plugin": "^1.3.4",
        "@vue/eslint-config-typescript": "^14.6.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.31.0",
        "eslint-plugin-storybook": "^9.1.3",
        "eslint-plugin-vue": "~10.3.0",
        "jiti": "^2.4.2",
        "jsdom": "^26.1.0",
        "npm-run-all2": "^8.0.4",
        "storybook": "^9.1.3",
        "typescript": "~5.8.0",
        "vite": "^7.0.6",
        "vite-plugin-checker": "^0.10.3",
        "vite-plugin-vue-devtools": "^8.0.0",
        "vitest": "^3.2.4",
        "vue": "^3.5.18",
        "vue-tsc": "^3.0.4"
    }
}
